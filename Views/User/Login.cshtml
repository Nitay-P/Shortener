
@model User
<!DOCTYPE html>
<html>
<head>
	<title>Register and Login Page</title>
	<!-- Add Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
	<style type="text/css">
		body {
			font-family: Arial, sans-serif;
		}

		form {
			display: inline-block;
			margin: 0 10px;
			vertical-align: top;
		}

		label, input {
			display: block;
			margin-bottom: 10px;
		}

		button {
			margin-top: 10px;
			padding: 5px 10px;
			background-color: #4CAF50;
			color: white;
			border: none;
			border-radius: 4px;
			cursor: pointer;
		}

		.google-btn {
			display: inline-block;
			vertical-align: top;
			margin-top: 30px;
		}

			.google-btn a {
				display: block;
				background-color: #4285F4;
				color: white;
				text-align: center;
				padding: 10px 20px;
				text-decoration: none;
				border-radius: 4px;
				box-shadow: 0 2px 4px 0 rgba(0,0,0,0.25);
				cursor: pointer;
			}
	</style>
</head>
<body>
	<h1>Login Page</h1>
