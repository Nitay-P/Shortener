	<form id="login-form" asp-action="Login" method="post">
		<h2>Login</h2>
		<label for="@Model.Email">Email:</label>
		<input type="email" id="email" name="email" required>
		<label for="@Model.Password">Password:</label>
		<input type="password" id="password" name="password" required>
		<button type="submit">Login</button>
	</form>
	<div class="google-btn">
		<a target="_blank" href="@ViewBag.Response" class="btn btn-primary">
			<i class="fab fa-google"></i> Sign in with Google
		</a>
	</div>
	<!-- Add Bootstrap JS and Font Awesome -->
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	<script src="https://kit.fontawesome.com/7eaf39b04d.js" crossorigin="anonymous"></script>
</body>
</html>








