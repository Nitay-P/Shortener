@model User
<!DOCTYPE html>
<html>
<head>
	<title>Login Page</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link type="text/css" rel="stylesheet" href="./css/loginpage.css" />
	<style type="text/css">
		.container {
			margin-top: 10%;
		}

		.card {
			border: none;
			box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
		}

		.card-header {
			background-color: #f5f5f5;
			border-bottom: none;
			font-size: 20px;
			font-weight: bold;
			text-align: center;
		}

		.form-control:focus {
			border-color: #007bff;
			box-shadow: none;
		}

		.btn-primary {
			background-color: #007bff;
			border-color: #007bff;
			width: 100%;
		}

			.btn-primary:hover {
				background-color: #0069d9;
				border-color: #0062cc;
			}

		.google-btn {
			background-color: #ffffff;
			border: 1px solid #cccccc;
			color: #555555;
			margin-top: 10px;
			width: 100%;
		}

			.google-btn:hover {
				background-color: #eeeeee;
			}

		.google-icon {
			background: url('https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg') no-repeat center;
			display: inline-block;
			height: 18px;
			margin-right: 10px;
			width: 18px;
		}
	</style>
</head>
<body>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header">Update Profile</div>
					<div class="card-body">
						<form asp-action="UpdateProfile" method="post">
							<div class="form-group">
								<label>First Name</label>
								<input asp-for="@Model.Name" name="name" type="text" class="form-control" placeholder="Enter email">
							</div>
							<div class="form-group">
								<label>Last Name</label>
								<input asp-for="@Model.LastName" name="lastname" type="text" class="form-control" placeholder="Enter email">
							</div>
							<div class="form-group">
								<label>Email address</label>
								<input asp-for="@Model.Email" name="email" type="email" class="form-control" placeholder="Enter email">
							</div>
							@if (!User.IsThirdParty())
							{
								<label for="@Model.Password">Password:</label>
								<input type="password" id="password" name="password" required>
								<label for="@Model.ConfirmPassword">Confirm Password:</label>
								<input type="password" id="confirmpassword" name="confirmpassword" required>

								<div class="form-group">
									<label>Password</label>
									<input asp-for="@Model.Password" name="password" type="password" class="form-control" placeholder="Password">
								</div>
								<div class="form-group">
									<label>Confirm Password</label>
									<input asp-for="@Model.ConfirmPassword" name="confirmpassword" type="password" class="form-control" placeholder="Confirm Password">
								</div>
							}
							<button type="submit" class="btn btn-primary">Update Profile</button>						
						</form>
						<div class="col-xl-12" style="margin-top:40px;">
							@if (User.IsThirdParty())
							{
								ViewData.ModelState.Remove("Password");
								ViewData.ModelState.Remove("ConfirmPassword");
							}
							@foreach (var modeleState in ViewData.ModelState.Values)
							{

								foreach (var error in modeleState.Errors)
								{
									<h5 style="color:red;margin-top:8px;">@error.ErrorMessage</h5>
								}
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>

