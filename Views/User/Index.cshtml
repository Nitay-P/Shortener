@{
}
@model User
<div class="container" style="padding:20px">
    <form method="post" asp-action="CreateUser" asp-controller="User">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="col-2">
                <label asp-for="@Model.Email"></label>
            </div>
            <div class="col-2">
                <input type="text" asp-for="@Model.Email" />
            </div>                                 
            <div>
                <label asp-for="@Model.Password"></label>
            </div>
            <div>
                <input type="password" asp-for="@Model.Password" />
            </div>
            <div>
            </div>
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
            <button class="btn btn-primary" type="submit">Create User</button>
            <a asp-controller="User" asp-action="Login">
                <input class="btn btn-primary" type="button" value="Login?"/>
            </a>
            
            @{
                if (ViewData["Message"] != null && !string.IsNullOrEmpty(ViewData["Message"]!.ToString()))
                {
                    <div class="bs-popover-bottom" style="border: 1px solid red;">
                        @ViewData["Message"]
                    </div> 
                }
            }   
        </div>
    </form>
</div>