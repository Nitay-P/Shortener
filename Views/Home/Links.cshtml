@using WebApplication1.Extensions;
@model User
@{
}
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>
                Url
            </th>
            <th>
                Shortened Url
            </th>
            <th>
                Clicks
            </th>           
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model.Links)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    <a>@($"{item.GetHref(Context)}")</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clicks)
                </td>                
            </tr>
        }
    </tbody>
</table>